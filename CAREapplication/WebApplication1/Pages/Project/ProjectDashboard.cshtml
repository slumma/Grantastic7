                                <td><button class="btn sm-btn">DETAILED VIEW</button></td>
                            </tr>
                            <tr class="project-row">
                                <td class="fw-bold">Project Gamma</td>
                                <td>08 / 14 / 2025</td>
                                <td>$390,000.00</td>
                                <td><button class="btn sm-btn">DETAILED VIEW</button></td>
                            </tr>
                            <tr class="project-row">
                                <td class="fw-bold">Project Delta</td>
                                <td>10 / 12 / 2025</td>
                                <td>$190,000.00</td>
                                <td><button class="btn sm-btn">DETAILED VIEW</button></td>
                            </tr>
                            <tr class="project-row">
                                <td class="fw-bold">Project Epsilon</td>
                                <td>04 / 20 / 2025</td>
                                <td>$30,000.00</td>
                                <td><button class="btn sm-btn">DETAILED VIEW</button></td>
                            </tr>
                            <tr class="project-row">
                                <td class="fw-bold">Project Nu</td>
                                <td>12 / 21 / 2025</td>
                                <td>$90,000.00</td>
                                <td><button class="btn sm-btn">DETAILED VIEW</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Large Buttons -->
            <div class="d-flex justify-content-end gap-3 mt-3">
                <button class="btn lg-btn">VIEW BUSINESS PARTNERS</button>
                <button class="btn lg-btn">ADD PROJECT</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
