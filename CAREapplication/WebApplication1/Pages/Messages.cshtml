    <link href="styles.css" rel="stylesheet">
    <!-- END LOADING BOOTSTRAP CSS -->
    <!-- Custom styles -->
    <link href="/css/messages.css" rel="stylesheet">

</head>

<body>
    <div class="container-fluid main-container">
        <div class="row g-2">
            <!-- Add a small gap between columns using Bootstrap's grid gap utilities -->
            <div class="col-12 col-md-3 sidebar p-3">
                <!-- Sidebar with 3 columns on medium screens -->
                <h5>RECENT MESSAGES</h5>
                <input type="text" class="form-control mb-3" placeholder="Search">
                <ul class="list-group message-list">
                    <li class="list-group-item active">Lexi Miller</li>
                    <li class="list-group-item">Kayla Olden <span class="status-dot"></span></li>
                    <li class="list-group-item">Nadeem Hudson <span class="status-dot"></span></li>
                    <li class="list-group-item">Josh White</li>
                    <li class="list-group-item">Alysun Sanders <span class="status-dot"></span></li>
                    <li class="list-group-item">Nick Clement</li>
                </ul>
                <button class="btn btn-primary w-100 mt-3">NEW MESSAGE</button>
            </div>
            <div class="col-12 col-md-7 sidebar p-3">
                <!-- Chat container with 9 columns on medium screens -->
                <div class="chat-header d-flex align-items-center">
                    <div class="avatar">LM</div>
                    <h5 class="ms-2">Lexi Miller</h5>
                </div>
                <br />
                <div class="chat-box">
                    <div class="message bg-light"></div>
                    <div class="message bg-secondary text-white"></div>
                    <div class="message bg-light"></div>
                </div>
                <div class="chat-input d-flex">
                    <input type="text" class="form-control" placeholder="Type a message">
                    <button class="btn btn-light mx-2">✎</button>
                    <button class="btn btn-light">+</button>
                    <button class="btn btn-primary ms-2">Send</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
