@page
@model CAREapplication.Pages.Users.EditProfileModel
@{
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Edit Profile</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/editprofile.custom.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-5 main-bg">
        <div class="container main-container">
            <div class="row px-5">
                <div class="text-start mb-3">
                    <a href="#" class="text-decoration-none" style="color: grey">&lt; PREVIOUS</a>
                </div>
                <div class="col-12 text-center mb-4">
                    <div class="profile-pic-wrapper">
                        <div class="profile-icon">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold">Sarah Bennett</h2>
                </div>
                <div class="col-md-6">
                    <form>
                        <div class="mb-3">
                            <label>First Name</label>
                            <input type="text" class="form-control custom-input" value="Sarah">
                        </div>
                        <div class="mb-3">
                            <label>Last Name</label>
                            <input type="text" class="form-control custom-input" value="Bennett">
                        </div>
                        <div class="mb-3">
                            <label>Pronouns</label>
                            <select class="form-select custom-input">
                                <option>She/Her</option>
                                <option>He/Him</option>
                                <option selected>Other</option>
                                <option>They/Them</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label>Address</label>
                            <input type="text" class="form-control custom-input" value="100 University Dr, Harrisonburg, VA 22807"
                                   data-bs-toggle="modal" data-bs-target="#changeAddressModal" readonly>
                        </div>
                    </form>
                </div>

                <div class="col-md-6">
                    <form>
                        <div class="mb-3">
                            <label>Username</label>
                            <input type="text" class="form-control custom-input" value="sarahbennett">
                        </div>
                        <div class="mb-3">
                            <label class="d-flex justify-content-between">
                                <span>Password</span>
                                <a class="change-password-link" data-bs-toggle="modal" data-bs-target="#changePasswordModal">Change Password</a>
                            </label>
                            <input type="password" class="form-control custom-input" value="********">
                        </div>
                        <div class="mb-3">
                            <label>Email</label>
                            <input type="email" class="form-control custom-input" value="sarahbennett@gmail.com">
                        </div>
                        <div class="mb-3">
                            <label>Phone</label>
                            <input type="tel" class="form-control custom-input" value="(555) 555-5555">
                        </div>
                    </form>
                </div>

                <div class="d-flex justify-content-center mt-4 gap-3">
                    <button class="lg-btn" style="background-color: #3BB54A !important;">SAVE CHANGES</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4" style="background-color: #D9D9D9; border-radius: 10px;">
                <div class="modal-header flex-column align-items-center border-0 mb-3 w-100 text-center">
                    <i class="fas fa-lock fa-2x mb-2" style="color: #450084;"></i>
                    <h5 class="modal-title fw-bold w-100 text-center" id="changePasswordModalLabel">Change Password</h5>
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form>
                    <div class="mb-3">
                        <label class="fw-bold">Current Password</label>
                        <input type="password" class="form-control custom-input" />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">New Password</label>
                        <input type="password" class="form-control custom-input" placeholder="minimum 7 characters" />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Confirm Password</label>
                        <input type="password" class="form-control custom-input" />
                    </div>
                    <div class="text-center">
                        <button type="button" class="lg-btn mt-2" style="background-color: #3BB54A !important;">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Change Address Modal -->
    <div class="modal fade" id="changeAddressModal" tabindex="-1" aria-labelledby="changeAddressModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4" style="background-color: #D9D9D9; border-radius: 10px;">
                <div class="modal-header flex-column align-items-center border-0 mb-3 w-100 text-center">
                    <i class="fas fa-house fa-2x mb-2" style="color: #450084;"></i>
                    <h5 class="modal-title fw-bold w-100 text-center" id="changeAddressModalLabel">Change Address</h5>
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form>
                    <div class="mb-3">
                        <label class="fw-bold">Street</label>
                        <input type="text" class="form-control custom-input" placeholder="123 Main St" />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">City</label>
                        <input type="text" class="form-control custom-input" placeholder="Your City" />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Zip Code</label>
                        <input type="text" class="form-control custom-input" placeholder="e.g. 12345" />
                    </div>
                    <div class="text-center">
                        <button type="button" class="lg-btn mt-2" style="background-color: #3BB54A !important;">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoYz1HiPTt4HiW5t6DkBto1FoSuGxsykqU5I1RXp0LG7j6G" crossorigin="anonymous"></script>

</body>
</html>