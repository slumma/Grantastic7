@page
@model CAREapplication.Pages.Grant.AddGrantModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Add Grant Form" />
    <title>Add Grant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/addgrant.custom.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-5 main-bg">
        <div class="container">
            <h2 class="text-center mb-4">Add New Grant</h2>
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="newGrant.GrantName"></label>
                            <input asp-for="newGrant.GrantName" class="form-control" placeholder="Grant Name" />
                            <span asp-validation-for="newGrant.GrantName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="newGrant.Funder"></label>
                            <select asp-for="newGrant.Funder" class="form-select">
                                <option disabled selected>Select Funder</option>
                                @foreach (var funder in Model.FunderList)
                                {
                                    <option value="@funder.FunderName">@funder.FunderName</option>
                                }
                            </select>
                            <span asp-validation-for="newGrant.Funder" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="newGrant.Project"></label>
                            <select asp-for="newGrant.Project" class="form-select">
                                <option disabled selected>Select Project</option>
                                @foreach (var project in Model.ProjectList)
                                {
                                    <option value="@project.ProjectName">@project.ProjectName</option>
                                }
                            </select>
                            <span asp-validation-for="newGrant.Project" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="newGrant.Amount"></label>
                            <input asp-for="newGrant.Amount" type="number" step="0.01" min="0" class="form-control" placeholder="Amount" />
                            <span asp-validation-for="newGrant.Amount" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="newGrant.Category"></label>
                            <select asp-for="newGrant.Category" class="form-select">
                                <option disabled selected>Select Category</option>
                                <option value="Technology">Technology</option>
                                <option value="Education">Education</option>
                                <option value="Community">Community</option>
                            </select>
                            <span asp-validation-for="newGrant.Category" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="newGrant.Status"></label>
                            <select asp-for="newGrant.Status" class="form-select">
                                <option disabled selected>Select Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Approved">Approved</option>
                                <option value="Declined">Declined</option>
                            </select>
                            <span asp-validation-for="newGrant.Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="newGrant.Description"></label>
                            <textarea asp-for="newGrant.Description" rows="6" class="form-control" placeholder="Description"></textarea>
                            <span asp-validation-for="newGrant.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="newGrant.SubmissionDate"></label>
                            <input asp-for="newGrant.SubmissionDate" type="date" class="form-control" />
                            <span asp-validation-for="newGrant.SubmissionDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="newGrant.AwardDate"></label>
                            <input asp-for="newGrant.AwardDate" type="date" class="form-control" />
                            <span asp-validation-for="newGrant.AwardDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success" asp-page-handler="AddGrant">Add Grant</button>
                    <button type="submit" class="btn btn-warning" asp-page-handler="Clear">Clear</button>
                    <a asp-page="GrantDashboard" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-info" asp-page-handler="Populate">Populate</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>