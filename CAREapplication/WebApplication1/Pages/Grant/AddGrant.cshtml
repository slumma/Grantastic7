@page
@model CAREapplication.Pages.Grant.AddGrantModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Add Grant</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Load Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="styles.css" rel="stylesheet">
    <!-- Custom styles -->
    <link href="/css/addgrant.custom.css" rel="stylesheet">
</head>

<body>
    <!-- Main Content -->
    <div class="container-fluid py-5 main-bg">
        <div class="container main-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="row px-5">
                    <h2 class="text-center mb-4">ADD NEW GRANT</h2>

                    <div class="col-md-6">
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="newGrant.GrantName">Grant Name</label>
                                <input asp-for="newGrant.GrantName" class="form-control custom-input" placeholder="Name" />
                                <span asp-validation-for="newGrant.GrantName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="newGrant.Supplier">Supplier</label>
                                <select asp-for="newGrant.Supplier" class="form-select custom-input">
                                    <option disabled selected>Select Supplier</option>
                                    @foreach (var supplier in Model.SupplierList)
                                    {
                                        <option value="@supplier.SupplierName">@supplier.SupplierName</option>
                                    }
                                </select>
                                <span asp-validation-for="newGrant.Supplier" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="newGrant.Project">Project</label>
                                <select asp-for="newGrant.Project" class="form-select custom-input">
                                    <option disabled selected>Select Project</option>
                                    @foreach (var project in Model.ProjectList)
                                    {
                                        <option value="@project.ProjectName">@project.ProjectName</option>
                                    }
                                </select>
                                <span asp-validation-for="newGrant.Project" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="newGrant.Amount">Amount</label>
                                <input asp-for="newGrant.Amount" type="number" class="form-control custom-input" placeholder="$" min="0" step="0.01" />
                                <span asp-validation-for="newGrant.Amount" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="newGrant.Category">Category</label>
                                <select asp-for="newGrant.Category" class="form-select custom-input">
                                    <option disabled selected>Select Category</option>
                                    <option value="Technology">Technology</option>
                                    <option value="Education">Education</option>
                                    <option value="Community">Community</option>
                                </select>
                                <span asp-validation-for="newGrant.Category" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="newGrant.Status">Status</label>
                                <select asp-for="newGrant.Status" class="form-select custom-input">
                                    <option disabled selected>Select Status</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Approved">Approved</option>
                                    <option value="Declined">Declined</option>
                                </select>
                                <span asp-validation-for="newGrant.Status" class="text-danger"></span>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-6">
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="newGrant.Description">Description</label>
                                <textarea asp-for="newGrant.Description" class="form-control custom-input" rows="6" placeholder="Type here..."></textarea>
                                <span asp-validation-for="newGrant.Description" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="newGrant.SubmissionDate">Submission Date</label>
                                <input asp-for="newGrant.SubmissionDate" type="date" class="form-control custom-input" />
                                <span asp-validation-for="newGrant.SubmissionDate" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="newGrant.AwardDate">Award Date</label>
                                <input asp-for="newGrant.AwardDate" type="date" class="form-control custom-input" />
                                <span asp-validation-for="newGrant.AwardDate" class="text-danger"></span>
                            </div>
                        </form>
                    </div>

                    <div class="d-flex justify-content-center mt-4 gap-3">
                        <form method="post">
                            <button type="submit" class="btn btn-warning" asp-page-handler="Clear">CLEAR</button>
                            <a asp-page="GrantDashboard" class="btn btn-secondary">CANCEL</a>
                            <button type="submit" class="btn btn-info" asp-page-handler="Populate">POPULATE</button>
                            <button type="submit" class="btn btn-success" asp-page-handler="AddGrant">ADD GRANT</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
