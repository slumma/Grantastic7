@page
@model CAREapplication.Pages.Grant.AddGrantModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Add Grant</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Load Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="styles.css" rel="stylesheet">
    <!-- Custom styles -->
    <link href="/css/addgrant.custom.css" rel="stylesheet">
</head>

<body>
    <!-- Main Content -->
    <div class="container-fluid py-5 main-bg">
        <div class="container main-container">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="row px-5">
                    <h2 class="text-center mb-4">ADD NEW GRANT</h2>

                    <form method="post">
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="newGrant.GrantName"></label>
                                    <input asp-for="newGrant.GrantName" class="form-control custom-input" placeholder="Grant Name" />
                                    <span asp-validation-for="newGrant.GrantName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="newGrant.Funder"></label>
                                    <select asp-for="newGrant.Funder" class="form-select custom-input">
                                        <option disabled selected>Select Funder</option>
                                        @foreach (var funder in Model.FunderList)
                                        {
                                            <option value="@funder.FunderName">@funder.FunderName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="newGrant.Funder" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="newGrant.Project"></label>
                                    <select asp-for="newGrant.Project" class="form-select custom-input">
                                        <option disabled selected>Select Project</option>
                                        @foreach (var project in Model.ProjectList)
                                        {
                                            <option value="@project.ProjectName">@project.ProjectName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="newGrant.Project" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="newGrant.Amount"></label>
                                    <input asp-for="newGrant.Amount" type="number" step="0.01" min="0" class="form-control custom-input" placeholder="Amount" />
                                    <span asp-validation-for="newGrant.Amount" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="newGrant.Category"></label>
                                    <select asp-for="newGrant.Category" class="form-select custom-input">
                                        <option disabled selected>Select Category</option>
                                        <option value="Federal">Federal</option>
                                        <option value="State">State</option>
                                        <option value="University">University</option>
                                        <option value="Institution">Institution</option>
                                    </select>
                                    <span asp-validation-for="newGrant.Category" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="newGrant.Status"></label>
                                    <select asp-for="newGrant.Status" class="form-select custom-input">
                                        <option disabled selected>Select Status</option>
                                        <option value="Pending">Pending</option>
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                    </select>
                                    <span asp-validation-for="newGrant.Status" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="newGrant.Description"></label>
                                    <textarea asp-for="newGrant.Description" rows="6" class="form-control custom-input" placeholder="Description"></textarea>
                                    <span asp-validation-for="newGrant.Description" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="newGrant.SubmissionDate"></label>
                                    <input asp-for="newGrant.SubmissionDate" type="date" class="form-control custom-input" />
                                    <span asp-validation-for="newGrant.SubmissionDate" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="newGrant.AwardDate"></label>
                                    <input asp-for="newGrant.AwardDate" type="date" class="form-control custom-input" />
                                    <span asp-validation-for="newGrant.AwardDate" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Buttons Row -->
                            <div class="d-flex justify-content-center mt-4 gap-3">
                                <button type="submit" class="btn btn-warning" asp-page-handler="Clear">Clear</button>
                                <a asp-page="GrantDashboard" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-info" asp-page-handler="Populate">Populate</button>
                                <button type="submit" class="btn btn-success" asp-page-handler="AddGrant">Add Grant</button>
                            </div>
                        </div>
                    </form>
                </div> 
            </div>
        </div>
    </div>
</body>
</html>