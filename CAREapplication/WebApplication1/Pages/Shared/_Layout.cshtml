<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark-purple px-4 fixed-top">
        <!-- Navbar -->
            <nav class="navbar navbar-expand-lg fixed-top px-4" style="background-color: #4B0082;">

            <a class="navbar-brand me-5" href="#">
                <img src="/images/jmu_care.png" alt="Logo" height="80" />
            </a>

            <div class="navbar-nav me-auto d-flex flex-row gap-4 align-items-center text-white">
                    <a class="nav-link text-white" asp-area="" asp-page="/Messages">MESSAGES</a>

                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="projectsDropdown" role="button" data-bs-toggle="dropdown">
                        PROJECTS
                    </a>
                    <ul class="dropdown-menu custom-dropdown" aria-labelledby="projectsDropdown">
                            <li><a class="dropdown-item" asp-page="/ProjectDashboard">Home</a></li>
                            <li><a class="dropdown-item" href="#">ADD PROJECT</a></li>
                    </ul>
                </div>

                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white active-link" href="#" id="grantsDropdown" role="button" data-bs-toggle="dropdown">
                        GRANTS
                    </a>
                    <ul class="dropdown-menu custom-dropdown" aria-labelledby="grantsDropdown">
                        <li><a class="dropdown-item" href="#">ADD GRANT</a></li>
                    </ul>
                </div>

                <a class="nav-link text-white" href="#">SEARCH</a>
            </div>


            <div class="d-flex align-items-center gap-3">
                <span class="nav-link text-white">samogden</span>
                <button class="btn logout-btn">LOGOUT</button>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>