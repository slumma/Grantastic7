<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

@{
    var loggedIn = Context.Session.GetInt32("loggedIn");
    var adminStatus = Context.Session.GetInt32("adminStatus");
    var facultyStatus = Context.Session.GetInt32("facultyStatus");
    var username = Context.Session.GetString("username");
}

<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top px-4">
            <a class="navbar-brand me-5" href="#">
                <img src="/images/jmu_care.png" alt="Logo" height="80" />
            </a>

            @if (loggedIn == 1)
            {
                <div class="navbar-nav me-auto d-flex flex-row gap-4 align-items-center text-white">
                    <a class="nav-link text-white" asp-area="" asp-page="/Messages">MESSAGES</a>

                    @if (adminStatus == 1)
                    {
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="projectsDropdown" role="button" data-bs-toggle="dropdown">
                                PROJECTS
                            </a>
                            <ul class="dropdown-menu custom-dropdown" aria-labelledby="projectsDropdown">
                                <li><a class="dropdown-item" asp-page="/Project/ProjectDashboard">Projects</a></li>
                                <li><a class="dropdown-item" asp-page="/BusinessPartners">Business Partners</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/AddProject">Add Project</a></li>
                            </ul>
                        </div>
                    }
                    else if (facultyStatus == 1)
                    {
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="projectsDropdown" role="button" data-bs-toggle="dropdown">
                                PROJECTS
                            </a>
                            <ul class="dropdown-menu custom-dropdown" aria-labelledby="projectsDropdown">
                                <li><a class="dropdown-item" asp-page="/Faculty/FacultyLanding">Faculty Landing</a></li>
                                <li><a class="dropdown-item" asp-page="/Faculty/AddProject">Add Project</a></li>
                            </ul>
                        </div>
                    }

                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="grantsDropdown" role="button" data-bs-toggle="dropdown">
                            GRANTS
                        </a>
                        <ul class="dropdown-menu custom-dropdown" aria-labelledby="grantsDropdown">
                            @if (adminStatus == 1)
                            {
                                <li><a class="dropdown-item" asp-page="/Grant/GrantDashboard">Grants</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/AddGrant">Add Grant</a></li>
                            }
                            else if (facultyStatus == 1)
                            {
                                <li><a class="dropdown-item" asp-page="/Faculty/AddGrant">Add Grant</a></li>
                            }
                        </ul>
                    </div>

                    <a class="nav-link text-white" asp-page="/Search">SEARCH</a>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <span class="nav-link text-white">@username</span>
                    <form asp-page="/Index" asp-page-handler="LogoutHandler" class="d-flex ms-3">
                        <button type="submit" class="btn logout-btn">LOGOUT</button>
                    </form>
                </div>
            }
            else
            {
                <div class="navbar-nav me-auto d-flex flex-row gap-4 align-items-center text-white">
                    <a class="nav-link text-white" asp-area="" asp-page="/Messages">MESSAGES</a>
                    <a class="nav-link text-white" asp-area="" asp-page="/Search">SEARCH</a>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <span class="nav-link text-white">@username</span>
                    <form asp-page="/Index" asp-page-handler="LogoutHandler" class="d-flex ms-3">
                        <button type="submit" class="btn logout-btn">LOGOUT</button>
                    </form>
                </div>
            }
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
